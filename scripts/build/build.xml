<?xml version="1.0" ?>
<project name="logman-remository" default="build">

    <property file="build.properties" />

    <target name="build">
        <delete dir="tmp" includeemptydirs="true" />

        <copy todir="tmp">
            <fileset dir="../../" />
        </copy>

        <delete dir="tmp/scripts" includeemptydirs="true" />
        <delete file="tmp/composer.json" quiet="true" />

        <delete file="plg_logman_remository${file.extension}" quiet="true" />
        <tar destfile="plg_logman_remository${file.extension}" basedir="tmp" compression="${file.compression}" />

        <delete dir="tmp" includeemptydirs="true" />
    </target>
</project>
